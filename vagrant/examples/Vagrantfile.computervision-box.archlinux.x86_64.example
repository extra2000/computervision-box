# -*- mode: ruby -*-
# vi: set ft=ruby :

def salt_provision_computervision_box(context)
  context.vm.provision "salt", run: 'once' do |salt|
    salt.minion_config = "salt/etc/minion"
    salt.masterless = true
    salt.run_highstate = false
    salt.verbose = true
    salt.log_level = "info"
    salt.colorize = true
    salt.install_type = "git"
    salt.version = "3003"
    salt.python_version = "3"
    salt.bootstrap_options = "-P -x python3 -c /tmp"
  end
end

Vagrant.configure("2") do |config|

  config.vagrant.plugins = ["vagrant-reload", "vagrant-scp"]

  config.vm.define "computervision-box" do |computervision_box|
    computervision_box.vm.box = "archlinux/archlinux"
    computervision_box.vm.hostname = "computervision-box"

    computervision_box.vm.provider "libvirt" do |v, override|
      override.vagrant.plugins = config.vagrant.plugins + ["vagrant-libvirt"]
      override.ssh.forward_agent = true
      override.ssh.forward_x11 = true
      v.cpus = "4"
      v.cputopology sockets: "1", cores: "4", threads: "1"
      v.memory = "6144"
      v.disk_bus = "virtio"
      v.nic_model_type = "virtio-net-pci"
      v.nested = false
      v.cpu_mode = "host-model"
      v.cpu_fallback = "allow"
      v.graphics_type = "vnc"
      v.kvm_hidden = "false"
      v.machine_type = "pc-i440fx-2.11"
      v.machine_arch = "x86_64"
      v.autostart = false
      v.storage_pool_name = "default"

      salt_provision_computervision_box override
    end

    computervision_box.vm.provider "virtualbox" do |v, override|
      override.vagrant.plugins = config.vagrant.plugins + ["vagrant-vbguest"]
      override.vbguest.auto_update = false
      override.vm.network "private_network", type: "dhcp"
      v.name = "computervision-box"
      v.gui = false
      v.cpus = "4"
      v.memory = "6144"
      v.linked_clone = true
      v.customize ["modifyvm", :id, '--natdnshostresolver1', 'on']
      v.customize ['modifyvm', :id, '--graphicscontroller', 'vmsvga']
      v.customize ['modifyvm', :id, '--audio', 'none']
      v.customize ['modifyvm', :id, '--nested-hw-virt', 'off']

      override.vm.provision 'shell', run: 'once', inline: 'pacman --sync --noconfirm avahi nss-mdns && systemctl start avahi-daemon && systemctl enable avahi-daemon', privileged: true
      salt_provision_computervision_box override
      override.vm.provision 'reload'
    end

    computervision_box.vm.synced_folder "salt/roots/", "/srv/", type: "rsync"
    computervision_box.vm.synced_folder '.', '/vagrant', disabled: true
  end
end
